<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :company_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :company_comment, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :active %>
    <%= form.check_box :active, id: :company_active %>
  </div>

  <div class="form-group">
    <%= form.label :deleted %>
    <%= form.datetime_select :deleted, id: :company_deleted, :include_blank => true, :prompt => true %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit company", class: "btn btn-primary"%>
  </div>
<% end %>
