<p id="notice"><%= notice %></p>

<h2><strong>List of all companies</strong></h2>

<table id="companies" class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Comment</th>
      <th>Active</th>
      <th>Deleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= truncate(company.comment, length:100) %></td>
        <td><%= company.active %></td>
        <td><%= company.deleted %></td>
        <td><strong><%= link_to 'Show', company %></strong></td>
        <td><strong><%= link_to 'Edit', edit_company_path(company) %></strong></td>
        <td><strong><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></strong></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <ul class="nav nav-pills">
    <li class="active">
<%= link_to 'New Company', new_company_path %>
    </li>
  </ul>

