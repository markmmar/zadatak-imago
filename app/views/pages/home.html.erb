
<p id="notice"><%= notice %></p>
<h2><strong>List of inactive companies</strong></h2>


<table id="companies" class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Comment</th>
      <th>Active</th>
      <th>Deleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= truncate(company.comment, length:100) %></td>
        <td><%= company.active %></td>
        <td><%= company.deleted %></td>

      </tr>
    <% end %>
  </tbody>
</table>


	<%= link_to "Manage all companies", "/companies", class: "btn btn-success" %>
 

<h2><strong>Chart of inactive companies</strong></h2>
    <%= area_chart Company.group_by_month(:deleted).count %>
